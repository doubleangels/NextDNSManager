{
  "manifest_version": 2,
  "name": "darkmode",
  "version": "1.0",
  "description": "Automatically injects dark mode content and assets for NextDNS.",
  "permissions": ["activeTab", "<all_urls>"],
  "content_scripts": [
    {
      "matches": ["https://my.nextdns.io/*"],
      "js": ["darkmode.js"],
      "run_at": "document_start"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "nextdns@doubleangels.com"
    }
  }
}
